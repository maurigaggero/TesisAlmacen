@inject SalidaDineroService SalidaDineroService
@inject NavigationManager NavigationManager
@inject IJSRuntime JS

<EditForm Model="@salida" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group row">
        <label class="col-3 col-form-label">Descripción</label>
        <div class="col">
            <div class="input-group">
                <InputText @bind-Value="@salida.Descripcion" class="form-control" placeholder="Descripción" />
            </div>
            <ValidationMessage For="@(() => salida.Descripcion)" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-3 col-form-label">Importe</label>
        <div class="col">
            <div class="input-group">
                <InputNumber @bind-Value="@salida.Importe" class="form-control" placeholder="Importe" />
            </div>
            <ValidationMessage For="@(() => salida.Importe)" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">
        <i class="oi oi-check "></i>
        <text style="color:white"> Registrar </text>
    </button>
</EditForm>

@code {
    [Parameter] public SalidasDineroModel salida { get; set; } = new SalidasDineroModel();
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}